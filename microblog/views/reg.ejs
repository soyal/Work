<form class="form-horizontal" method="post" action="/register">
    <fieldset>
        <legend>用户注册</legend>
        <div class="form-group">
            <div class="row">
                <label class="control-label col-sm-2" for="username">用户名</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="username" name="username">
                    <p class="help-block">你的账户名称，用于登录和显示。</p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="control-label col-sm-2" for="password">口令</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" id="password" name="password">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="control-label col-sm-2" for="password-repeat">重复输入口令</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" id="password-repeat" name="password-repeat">
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary col-sm-offset-2">注册</button>
        </div>
    </fieldset>
</form>